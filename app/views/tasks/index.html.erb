<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Finished</th>
      <th>Pomodoros</th>
      <th>Total time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class=<%= 'current_task' if task.current %>>
        <td><%= task.name %></td>
        <td><%= task.desc %></td>
        <td><%= task.finished %></td>
        <td><%= task.pomodoros.count %></td>
        <td><%= task.time_overview %></td>
        <td><%= task.current? ? 'Current' : 'Not active' %></td>
        <td><%= link_to 'Set current', set_current_path(id: task.id), method: :post unless task.current %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

